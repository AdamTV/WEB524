@model IEnumerable<S2021A6AS.Models.ArtistBaseViewModel>

@{
    ViewBag.Title = "Artist List";
    var userAccount = new S2021A6AS.Controllers.RequestUser(User as System.Security.Claims.ClaimsPrincipal);
}

<h2>@ViewBag.Title</h2>
@if (userAccount.HasRoleClaim("Executive"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthOrStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Executive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrlArtist)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthName)
            </td>
            @{
                var startDate = item.BirthOrStartDate.ToLongDateString();
            }
            <td>
                @startDate
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Executive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                <img height="100" width="100" src="@Html.DisplayFor(modelItem => item.UrlArtist)" />
            </td>
            <td>
                @*            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
                @Html.ActionLink("Details", "Details", new { id = item.Id }) @*|*@
                @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
            </td>
        </tr>
    }

</table>
