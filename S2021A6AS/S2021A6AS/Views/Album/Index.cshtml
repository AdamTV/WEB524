@model IEnumerable<S2021A6AS.Models.AlbumBaseViewModel>

@{
    ViewBag.Title = "Album List";
}

<h2>@ViewBag.Title</h2>

@*<p>
        @Html.ActionLink("Create New Album", "Create")
    </p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrlAlbum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Coordinator)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            @{
                var releaseDate = item.ReleaseDate.ToLongDateString();
            }
            <td>
                @releaseDate
            </td>
            <td>
                <img height="100" width="100" src="@Html.DisplayFor(modelItem => item.UrlAlbum)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coordinator)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
